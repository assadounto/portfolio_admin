<div class="project-show-cont">
<div class="info">
   <h1><%=@project.name%></h1>
   <p> <%=@project.description%></p>
    <p><%=@project.place%></p>
    <h2><%=@project.title%></h2>
    <div class="links">
    <%=link_to "Live source" , @project.livesource , target: '_blank'%>
     <%=link_to "source code" , @project.sourcecode , target: '_blank'%>
    </div>
  
    <% if @project.images.attached? %>
    <% @project.images.each do |image| %>
        <image src="<%=url_for(image)%>" alt="logo" width="100" height="100">
    <%end%>
<%end%>
    <%@project.technologies.each do |technology|%>
            <p><%=technology.name%></p> 
            <%=link_to "Edit", edit_technology_path(technology)%>
            <%=button_to "Delete",project_technology_path(@project.id), method: :delete%>
    <%end%>
</div>

<div><%= button_to  "delete Project ", project_path(@project), method: :delete %></div>

